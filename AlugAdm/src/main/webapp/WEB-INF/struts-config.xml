<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans>
    
    </form-beans>
    
    <global-exceptions>
    
    </global-exceptions>
    
    <global-forwards>
        <forward name="cancelar"  path="/index.jsp"/>
    </global-forwards>
    
    <action-mappings>
        <action path="/cadastrarImovel" type="br.ufg.ing.alugadm.controller">
            <forward name="cadastrarImovel"  path="/WEB-INF/jsp/imovel/adicionarImovel.jsp"/>
        </action>     
        <action path="/editarImovel" type="br.ufg.ing.alugadm.controller">
            <forward name="editarImovel"  path="/WEB-INF/jsp/imovel/editarImovel.jsp"/>
        </action>
        <action path="/removerImovel" type="br.ufg.ing.alugadm.controller">
            <forward name="removerImovel"  path="/WEB-INF/jsp/imovel/mostrarImovel.jsp"/>
        </action>
        <action path="/visualizarImovel" type="br.ufg.ing.alugadm.controller">
            <forward name="visualizarImovel"  path="/WEB-INF/jsp/imovel/mostrarImovel.jsp"/>
        </action>
         <action path="/cadastrarLocatario" type="br.ufg.ing.alugadm.controller">
            <forward name="cadastrarLocatario"  path="/WEB-INF/jsp/locatario/adicionarLocatario.jsp"/>
        </action>     
        <action path="/editarLocatario" type="br.ufg.ing.alugadm.controller">
            <forward name="editarLocatario"  path="/WEB-INF/jsp/locatario/editarLocatario.jsp"/>
        </action>
        <action path="/removerLocatario" type="br.ufg.ing.alugadm.controller">
            <forward name="removerLocatario"  path="/WEB-INF/jsp/locatario/mostrarLocatario.jsp"/>
        </action>           
          <action path="/visualizarLocatario" type="br.ufg.ing.alugadm.controller">
            <forward name="visualizarLocatario"  path="/WEB-INF/jsp/imovel/mostrarLocatario.jsp"/>
        </action>
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="com/myapp/struts/ApplicationResource"/>    
    
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
  
</struts-config>
