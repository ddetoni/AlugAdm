<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans>
    
    </form-beans>
    
    <global-exceptions>
    
    </global-exceptions>
    
    <global-forwards>
        <forward name="Login"  path="/Login.adm"/>        
        <forward name="CadastrarImovel" path="/CadastrarImovel.adm"/>
        <forward name="VisualizarImovel" path="/VisualizarImovel.adm"/>
        <!--<forward name="SalvarImovel" path="/SalvarImovel.adm"/>-->
        <forward name="SalvarImovel" path="/jsp/imovel/adicionarImovel.jsp"/>
        <forward name="EditarImovel" path="/EditarImovel.adm"/>
        
        <forward name="CadastrarLocatario" path="/CadastrarLocatario.adm"/>
        <forward name="VisualizarLocatario" path="/VisualizarLocatario.adm"/>
        <forward name="EditarLocatario" path="/EditarLocatario.adm"/>
        <forward name="SalvarLocatario" path="/SalvarLocatario.adm"/>
        
        <forward name="VisualizarLocacao" path="/VisualizarLocacao.adm"/>
        <forward name="RealizarLocacao" path="/RealizarLocacao.adm"/>
        <forward name="SalvarLocacao" path="/SalvarLocacao.adm"/>
    </global-forwards>
   
    <action-mappings>
        <action path="/Login" forward="/jsp/login.jsp"/>
        <action path="/CadastrarImovel" type="br.ufg.inf.alugadm.controller.ImovelServlet" forward="/jsp/imovel/adicionarImovel.jsp"/>
        <!--<action path="/CadastrarImovel"  forward="/jsp/imovel/mostrarImovel.jsp"/>-->
        <action path="/VisualizarImovel" forward="/jsp/imovel/mostrarImovel.jsp" type="br.ufg.inf.alugadm.controller.ImovelServlet"/>
        <action path="/EditarImovel" forward="/jsp/imovel/editarImovel.jsp" type="br.ufg.inf.alugadm.controller.ImovelServlet"/>
        <action path="/SalvarImovel" type="br.ufg.inf.alugadm.controller.ImovelServlet"/>
        
        <action path="/CadastrarLocatario" forward="/jsp/locatario/adicionarLocatario.jsp"/>
        <action path="/VisualizarLocatario" forward="/jsp/locatario/mostrarLocatario.jsp"/>
        <action path="/EditarLocatario" forward="/jsp/locatario/editarLocatario.jsp"/>
        <action path="/SalvarLocatario" forward="/jsp/locatario/editarLocatario.jsp"/>

        <action path="/SalvarLocatario" forward="/jsp/imovel/mostrarLocatario.jsp"/>
        <action path="/VisualizarLocacao" forward="/index.jsp"/>
        <action path="/RealizarLocacao" forward="/jsp/locacao/informarLocacao.jsp"/>
        <action path="/SalvarLocacao" forward="/index.jsp"/>
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="com/myapp/struts/ApplicationResource"/>    
    
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
  
</struts-config>
