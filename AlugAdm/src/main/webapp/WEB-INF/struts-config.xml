<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans></form-beans> 
       
    <global-exceptions></global-exceptions>
    
    <global-forwards>
        
        <!--IMOVEL-->       
        <forward name="fwdCadastrarImovel" path="/jsp/imovel/adicionarImovel.jsp"/>
        <forward name="fwdVisualizarImovel" path="/jsp/imovel/mostrarImovel.jsp"/>
        <forward name="fwdSalvarImovel" path="/jsp/imovel/adicionarImovel.jsp"/>
        <forward name="fwdEditarImovel" path="/jsp/imovel/editarImovel.jsp"/>
        
        <!--LOCATARIO-->  
        <forward name="CadastrarLocatario" path="/CadastrarLocatario.adm"/>
        <forward name="VisualizarLocatario" path="/VisualizarLocatario.adm"/>
        <forward name="EditarLocatario" path="/EditarLocatario.adm"/>
        <forward name="SalvarLocatario" path="/SalvarLocatario.adm"/>
        
        <!--LOCACAO-->
        <forward name="RealizarLocacao" path="/jsp/locacao/informarLocacao.jsp"/>
        <forward name="SalvarLocacao" path="/jsp/locacao/informarLocacao.jsp"/>
        <forward name="EditarLocacao" path="/jsp/locacao/editarLocacao.jsp"/>
        
    </global-forwards>
   
    <action-mappings>
        
        <!--IMOVEL--> 
        <action path="/CadastrarImovel" type="br.ufg.inf.alugadm.controller.ImovelServlet" />
        <action path="/VisualizarImovel" type="br.ufg.inf.alugadm.controller.ImovelServlet"/>
        <action path="/EditarImovel" type="br.ufg.inf.alugadm.controller.ImovelServlet"/>
        <action path="/SalvarImovel" type="br.ufg.inf.alugadm.controller.ImovelServlet"/>
        
        <!--LOCATARIO-->  
        <action path="/CadastrarLocatario" forward="/jsp/locatario/adicionarLocatario.jsp"/>
        <action path="/VisualizarLocatario" forward="/jsp/locatario/mostrarLocatario.jsp"/>
        <action path="/EditarLocatario" forward="/jsp/locatario/editarLocatario.jsp"/>
        <action path="/SalvarLocatario" forward="/jsp/locatario/editarLocatario.jsp"/>

        <!--LOCACAO-->
        <action path="/RealizarLocacao" type="br.ufg.inf.alugadm.controller.LocacaoServlet" />
        <action path="/EditarLocacao" type="br.ufg.inf.alugadm.controller.LocacaoServlet"/>
        <action path="/SalvarLocacao" type="br.ufg.inf.alugadm.controller.LocacaoServlet"/>
        
    </action-mappings>
    
    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="com/myapp/struts/ApplicationResource"/>    
    
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />      
        <set-property property="moduleAware" value="true" />
    </plug-in>
    
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
  
</struts-config>
